ups_out_load_default_levels = (85, 90) # warning / critical

def inventory_ups_out_load(info):
    if len(info) > 0:
        return [ ( format_item_ups_out_load(x[0]), "ups_out_load_default_levels") for x in info if int(x[1]) > 0]

def check_ups_out_load(item, params, info):
    warn, crit = params
    for line in info:
	if format_item_ups_out_load(line[0]) == item:
	    power = int(line[1])
	    perfdata = [ ( "out_load", power, warn, crit, 100 ) ]
	    infotext = "load: %d%% (warn/crit at %d%%/%d%%) " % \
	 	(power, warn, crit)

	    if power >= crit:
		return (2, infotext, perfdata)
	    elif power >= warn:
		return (1, infotext, perfdata)
	    else:
		return (0, infotext, perfdata)

    return (3, "Phase %s not found in SNMP output" % item)

check_info['ups_eppc_out_load'] = {
  "inventory_function"  : inventory_ups_out_load,
  "check_function"      : check_ups_out_load,
  "service_description" : "OUT load phase %s",
  "has_perfdata"        : True,
  "includes"            : [ "ups_eppc.include" ],
  "snmp_info"           : ( ".1.3.6.1.2.1.33.1.4.4.1", [ "0", "5" ] ),
  "snmp_scan_function"  : lambda oid: oid(".1.3.6.1.2.1.1.2.0").startswith(".1.3.6.1.4.1.935.10.1"),
}
